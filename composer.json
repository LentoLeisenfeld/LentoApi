{
  "name": "lento/lentoapi",
  "description": "A lightweight modular API framework for PHP, bundling routing, middleware, CORS, logging, and Eloquent ORM.",
  "keywords": [
    "php",
    "api",
    "framework",
    "microframework",
    "psr-3",
    "psr-4",
    "eloquent"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Lento Leisenfeld",
      "email": "lento@leisenfeld.com"
    }
  ],
  "scripts": {
    "start:lint": "phpcs --standard=PSR12 src",
    "start:lint:fix": "phpcbf --standard=PSR12 src",
    "start:test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "Lento\\": "src/Lento/"
    }
  },
  "require": {
    "php": ">=8.4",
    "illuminate/database": "^12.19",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
